{
  "manifest_version": 2,
  "name": "ProtonMail Checker",
  "version": "1.7",
  "description": "Checks number of unread e-mails in the ProtonMail Inbox.",
  "icons": {
    "48" : "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon-48g.png",
    "default_title": "ProtonMail Checker"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://protonmail.ch/archive",
        "https://protonmail.ch/compose",
        "https://protonmail.ch/contacts",
        "https://protonmail.ch/draft",
        "https://protonmail.ch/draft/*",
        "https://protonmail.ch/inbox",
        "https://protonmail.ch/inbox/*",
        "https://protonmail.ch/label/*",
        "https://protonmail.ch/locked",
        "https://protonmail.ch/login",
        "https://protonmail.ch/m/*",
        "https://protonmail.ch/outbox",
        "https://protonmail.ch/outbox/*",
        "https://protonmail.ch/settings",
        "https://protonmail.ch/search?*",
        "https://protonmail.ch/spam",
        "https://protonmail.ch/spam/*",
        "https://protonmail.ch/starred",
        "https://protonmail.ch/starred/*",
        "https://protonmail.ch/trash",
        "https://protonmail.ch/trash/*"
      ],
      "js": [
        "scripts/jquery-2.0.2.min.js",
        "scripts/contentscript.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "scripts/jquery-2.0.2.min.map"
  ],
  "permissions": [
    "tabs"
  ]
}
